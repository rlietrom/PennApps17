<!DOCTYPE html>
<html>
	<head>
		<meta charset=utf-8>
		<title>My first three.js app</title>
		<style>
			body { margin: 0; }
			canvas { width: 100%; height: 100% }
		</style>

	</head>
	<body>
    <h1>Music Trends across Different Countries</h1>
    <div id='world'></div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/three.js/87/three.js'></script>
    <script>

			var scene = new THREE.Scene();
			var camera = new THREE.PerspectiveCamera( 75, window.innerWidth/window.innerHeight, 0.1, 1000 );
      camera.position.z = 10;

			var renderer = new THREE.WebGLRenderer();
			renderer.setSize( window.innerWidth, window.innerHeight );
			document.body.appendChild( renderer.domElement );
      //
      var light = new THREE.DirectionalLight('#FFFFFF', 1 );
      light.position.set( 0, 1, 1 ).normalize();
      scene.add(light);

			var geometry = new THREE.SphereGeometry(5, 32, 32);
      var texture = new THREE.MeshPhongMaterial( {
        map: THREE.ImageUtils.loadTexture('assets/colorful.png',THREE.SphericalRefractionMapping),
        shininess: 10,
        skinning: true
      } );
			var sphere = new THREE.Mesh( geometry, texture );
			scene.add( sphere );

			var animate = function () {
				requestAnimationFrame( animate );
				sphere.rotation.y += 0.005;
				renderer.render(scene, camera);
			};
			animate();
		</script>
	</body>
</html>
